{
  // editor
  "editor.hideCursorInOverviewRuler": true,
  "editor.lineHeight": 26,
  "editor.matchBrackets": false,
  "editor.occurrencesHighlight": false,
  "editor.overviewRulerBorder": false,
  "editor.renderIndentGuides": false,
  "editor.renderLineHighlight": "none",
  "editor.folding": false,
  "editor.snippetSuggestions": "top",
  "editor.minimap.enabled": false,
  "editor.cursorBlinking": "solid",
  "editor.lineNumbers": "on",
  "editor.cursorStyle": "line",
  // new file
  "newFile.defaultFileExtension": ".go",
  "newFile.showPathRelativeTo": "project",
  // search
  "search.smartCase": true,
  // terminal
  "terminal.integrated.copyOnSelection": true,
  "eslint.packageManager": "npm",
  // files
  "files.trimTrailingWhitespace": true,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "vendor": true,
    "package-lock.json": true
  },
  // dash
  "dash.docset.go": [
    "go",
    "godoc"
  ],
  // explorer
  "explorer.openEditors.visible": 0,
  "explorer.confirmDragAndDrop": false,
  // python
  "python.linting.pylintArgs": [
    "--errors-only"
  ],
  // code runner
  "code-runner.clearPreviousOutput": true,
  "code-runner.executorMap": {
    "python": "python3",
  },
  // prettier
  "editor.formatOnSave": true,
  // code runner
  "code-runner.runInTerminal": false,
  // sync settings
  "sync.gist": "94288845f0956f08d4766b477001c9eb",
  "sync.lastUpload": "2018-08-02T12:28:16.842Z",
  "sync.autoDownload": false,
  "sync.autoUpload": false,
  "sync.lastDownload": "",
  "sync.forceDownload": false,
  "sync.host": "",
  "sync.pathPrefix": "",
  "sync.quietSync": false,
  "sync.askGistName": false,
  // fonts
  "editor.fontFamily": "Fira Code",
  "terminal.integrated.fontSize": 8,
  "editor.fontLigatures": true,
  "editor.fontSize": 15,
  // vim
  "vim.leader": " ",
  "vim.cursorStylePerMode": {
    "normal": "underline",
    "commandlineinprogress": "underline"
  },
  "vim.useSystemClipboard": true,
  "vim.easymotion": true,
  "vim.easymotionMarkerBackgroundColor": "red",
  // space map
  "vim.normalModeKeyBindings": [
    {
      "before": [
        "<leader>",
        "w"
      ],
      "after": [],
      "commands": [
        {
          "command": "workbench.action.files.save",
          "args": []
        }
      ]
    },
    {
      "before": [
        "<leader>",
        "q"
      ],
      "after": [],
      "commands": [
        {
          "command": "workbench.action.closeActiveEditor",
          "args": []
        }
      ]
    },
    {
      "before": [
        "<leader>",
        "a"
      ],
      "after": [],
      "commands": [
        {
          "command": "workbench.action.files.save",
          "args": []
        },
        {
          "command": "workbench.action.closeActiveEditor",
          "args": []
        }
      ]
    },
    {
      "before": [
        "K"
      ],
      "after": [
        "leader",
        "leader",
        "k"
      ]
    },
    {
      "before": [
        "J"
      ],
      "after": [
        "leader",
        "leader",
        "j"
      ]
    },
    {
      "before": [
        "<leader>",
        "i"
      ],
      "after": [
        "y",
        "i",
        "\""
      ]
    },
    {
      "before": [
        "Y"
      ],
      "after": [
        "y",
        "$"
      ]
    },
    {
      "before": [
        "<leader>",
        "e"
      ],
      "after": [],
      "commands": [
        {
          "command": "editor.action.commentLine",
          "args": []
        }
      ]
    }
  ],
  // go
  "go.liveErrors": {
    "enabled": true,
    "delay": 500
  },
  "go.lintTool": "golint",
  "go.lintOnSave": "package",
  "go.useLanguageServer": true,
  "go.gocodePackageLookupMode": "gb",
  // files
  "files.associations": {
    "*.toml": "toml"
  },
  "explorer.confirmDelete": false,
  // python
  // TODO: update to p3 and nix?
  "python.pythonPath": "/usr/bin/python2.7",
  // TODO: maybe there is better?
  "python.formatting.provider": "autopep8",
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": true,
  "python.linting.enabled": false,
  // latex
  "latex-workshop.message.update.show": false,
  // window
  "window.zoomLevel": -1,
  "window.newWindowDimensions": "maximized",
  // workbench
  "workbench.statusBar.feedback.visible": false,
  "workbench.fontAliasing": "antialiased",
  "workbench.panel.defaultLocation": "right",
  "workbench.activityBar.visible": false,
  "workbench.startupEditor": "newUntitledFile",
  "workbench.editor.showIcons": false,
  "workbench.iconTheme": "Monokai Pro (Filter Octagon) Icons",
  "workbench.colorTheme": "Default Light+",
  // TODO: maybe not need?
  // typescript
  "typescript.check.npmIsInstalled": false,
  "typescript.updateImportsOnFileMove.enabled": "never",
  // javascript
  "javascript.updateImportsOnFileMove.enabled": "never",
  // git
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "gitlens.advanced.messages": {
    "suppressCommitHasNoPreviousCommitWarning": false,
    "suppressCommitNotFoundWarning": false,
    "suppressFileNotUnderSourceControlWarning": false,
    "suppressGitVersionWarning": false,
    "suppressLineUncommittedWarning": false,
    "suppressNoRepositoryWarning": false,
    "suppressResultsExplorerNotice": false,
    "suppressShowKeyBindingsNotice": true,
    "suppressUpdateNotice": true,
    "suppressWelcomeNotice": false
  },
  // gitlens
  "gitlens.codeLens.enabled": false,
  "gitlens.settings.mode": "advanced",
  "gitlens.historyExplorer.enabled": true,
  "gitlens.keymap": "chorded",
  "gitlens.codeLens.scopes": [
    "containers",
    "document"
  ],
  // sync settings & extensions
  "sync.removeExtensions": true,
  "sync.syncExtensions": true,
  // extensions
  "extensions.autoUpdate": true
}